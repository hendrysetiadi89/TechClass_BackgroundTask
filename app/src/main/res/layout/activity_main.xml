<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:layout_margin="16dp">

    <Button
            android:id="@+id/button_async_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsyncTask Example 1"/>

    <Button
            android:id="@+id/button_async_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AsyncTask Example 2"/>

    <Button
            android:id="@+id/button_rxjava_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava Example"/>

    <Button
            android:id="@+id/button_rxjava_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava Example 2"/>

    <Button
            android:id="@+id/button_rxjava_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RxJava Example 3"/>

</LinearLayout>